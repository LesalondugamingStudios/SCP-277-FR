{
  "extends": "ts-node/node16/tsconfig.json",

  "ts-node": {
    "transpileOnly": true,

    "files": true,

    "compilerOptions": {
      "lib": ["ES2021", "ESNext", "DOM"],
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "moduleResolution": "Node16"
    }
  },

  "compilerOptions": {
    "lib": ["ES2021", "ESNext", "DOM"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "removeComments": true,
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "alwaysStrict": false,
    "strict": false
  },
  "include": ["src/**/*", "src/locals/**/*.json"],
  "exclude": ["node_modules/**/*"]
}
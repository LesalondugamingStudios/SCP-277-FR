{
  "compilerOptions": {
    "lib": ["ES2021", "ESNext", "DOM"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "alwaysStrict": false,
    "strict": false
  },
  "include": ["src/**/*", "src/locals/**/*.json"],
  "exclude": ["node_modules/**/*"]
}
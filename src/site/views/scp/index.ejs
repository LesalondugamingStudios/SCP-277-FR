<!DOCTYPE html>
<html lang="<%= l %>" data-bs-theme="dark">
<head>
  <%- include("../partials/head", { pageTitle: t("site:scpf") }) %>
  <link rel="stylesheet" href="/stylesheets/app.scp.home.css">
</head>
<body>
  <header>
    <%- include("../partials/header") %>
  </header>

  <div class="app">
    <div class="content content_sp centered">
      <img class="logo" src="<%= wiki.scp.img %>" alt="Branch logo">
      <h1><%= t("site:scpf") %></h1>
      <p class="warning"><%- t("site:classified_data.warning", { bo: "<b style='font-size: 2rem;'>", bc: "</b>" }) %><br><br><%= t("site:classified_data.staff_only") %><br><%= t("site:classified_data.law") %></p>
    </div>

    <div class="content content_sp">
      <h2 class="centered"><%= t("site:reports") %></h2>

      <div class="input-group mb-3">
        <span class="input-group-text"><i class="fa fa-magnifying-glass"></i></span>
        <div class="form-floating">
          <input type="search" class="form-control" id="search" placeholder="<%= t("site:search") %>">
          <label for="search"><%= t("site:search") %></label>
        </div>
      </div>

      <% if (!wiki.scp.series) { %>
        <div class="nodata centered"><%= t("site:no_data") %></div>
      <% } else { %>
        <div id="showcase">
          <% showcase.forEach(element => { %>
            <div class="crow">
              <a class="searchresult" href="/<%= branch %>/scp/<%= element.nb %>">
                SCP-<%= element.nb.toUpperCase() %> : <%= element.name %>
              </a>
            </div>
          <% }) %>
        </div>
      <% } %>
      
      <div id="results"></div>
    </div>
  </div>
  <script src="/scripts/app.search.js"></script>
</body>
</html>
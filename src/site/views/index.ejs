<!DOCTYPE html>
<html lang="<%= l %>" data-bs-theme="dark">
<head>
  <%- include("./partials/head", { pageTitle: "Home" }) %>
  <link rel="stylesheet" href="/stylesheets/app.home.css">
</head>
<body>
  <header>
    <%- include("./partials/header") %>
  </header>

  <div class="app centered">
    <div class="content content_sp">
      <h1>Terminal: SCP-277-FR</h1><br>
      <div class="display"><a href="https://u24.gov.ua/" target="_blank"><span class="fi fi-ua"></span> Support Ukraine</a> <a href="https://radio.lsdg.xyz/" target="_blank"><img src="https://radio.lsdg.xyz/favicon.png" class="d-inline-block align-text-top" alt="" width="22" height="22"> LaRADIOdugaming</a></div><br>
      <i><%= t("site:encrypted") %></i>
    </div>

    <% if (l != branch) { %>
      <div class="alert alert-warning content_sp" role="alert"><%- t("divers:settings.branch.no_translations", { link: "<a href='/translate' target='_blank'>Crowdin</a>" }) %></div>
    <% } %>

    <div class="div_container dc2 content_sp">
      <div class="content">
        <h2><%= t("site:scpf") %></h2>
        
        <div class="crow"><a href="<%= `${locA[0]}/${wiki.shortcut}/` %>scp?random"><span><i class="fa fa-dice"></i> <%= t("site:random_scp") %></span></a></div>
        <div class="crow"><a href="<%= `${locA[0]}/${wiki.shortcut}/` %>scp"><span><i class="fa fa-compass"></i> <%= t("site:browse_scp") %></span></a></div>

        <div>
          <h3><%= t("site:newest_pages") %></h3>

          <div class="row">
            <% recentSCPReports.forEach(element => { %>
              <div class="col-sm-6">
                <div class="card">
                  <% if (element.images.length) { %>
                    <img src="<%= element.images[0].url %>" class="card-img-top" alt="LAST_UPDATE">
                  <% } %>
                  <div class="card-body">
                    <h5 class="card-title">SCP-<%= element.id.toUpperCase() %><%= element.name ? ` : ${element.name}` : "" %></h5>
                    <% if (element.images.length) { %>
                      <p class="card-text"><%- element.images[0].description.replace(/<\/?[a-z]+>/gmi, "") %></p>
                    <% } %>
                    <a href="<%= `${locA[0]}/${wiki.shortcut}/` %>scp/<%= element.id %>" class="btn btn-primary"><%= t("site:visit") %></a>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>

      <% if (wiki.backrooms) { %>
        <div class="content">
          <h2><%= t("site:backrooms") %></h2>
          
          <div class="crow"><a href="<%= `${locA[0]}/${wiki.shortcut}/` %>backrooms?random"><span><i class="fa fa-dice"></i> <%= t("site:random_backrooms") %></span></a></div>
          <div class="crow"><a href="<%= `${locA[0]}/${wiki.shortcut}/` %>backrooms"><span><i class="fa fa-compass"></i> <%= t("site:browse_backrooms") %></span></a></div>
  
          <div>
            <h3><%= t("site:newest_pages") %></h3>
  
            <div class="row">
              <% recentEntryReports.forEach(element => { %>
                <div class="col-sm-6">
                  <div class="card">
                    <% if (element.images.length) { %>
                      <img src="<%= element.images[0].url %>" class="card-img-top" alt="LAST_UPDATE">
                    <% } %>
                    <div class="card-body">
                      <h5 class="card-title"><%= element.backroomsType != "other" ? `${element.backroomsType.capitalize()} ${element.id} : ` : "" %><%= element.name %></h5>
                      <% if (element.images.length) { %>
                        <p class="card-text"><%- element.images[0].description.replace(/<\/?[a-z]+>/gmi, "") %></p>
                      <% } %>
                      <a href="<%= `${locA[0]}/${wiki.shortcut}/` %>backrooms/<%= element.backroomsType %>-<%= element.id %>" class="btn btn-primary"><%= t("site:visit") %></a>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>